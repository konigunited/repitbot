# ============== RepitBot Production Environment Variables ==============
# ВАЖНО: Скопировать в .env.production и заполнить реальными значениями
# НЕ КОММИТИТЬ .env.production в Git!

# ============== GENERAL SETTINGS ==============
ENVIRONMENT=production
DEBUG=false
APP_NAME=RepitBot
APP_VERSION=1.0.0

# ============== DATABASE CONNECTIONS ==============
# PostgreSQL хост (замените на ваш реальный)
DATABASE_HOST=your-postgres-host.com
DATABASE_PORT=5432

# User Service Database
DATABASE_URL_USER=postgresql+asyncpg://repitbot_user_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_users?sslmode=require

# Lesson Service Database  
DATABASE_URL_LESSON=postgresql+asyncpg://repitbot_lesson_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_lessons?sslmode=require

# Homework Service Database
DATABASE_URL_HOMEWORK=postgresql+asyncpg://repitbot_homework_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_homework?sslmode=require

# Payment Service Database
DATABASE_URL_PAYMENT=postgresql+asyncpg://repitbot_payment_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_payments?sslmode=require

# Material Service Database
DATABASE_URL_MATERIAL=postgresql+asyncpg://repitbot_material_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_materials?sslmode=require

# Notification Service Database
DATABASE_URL_NOTIFICATION=postgresql+asyncpg://repitbot_notification_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_notifications?sslmode=require

# Analytics Service Database
DATABASE_URL_ANALYTICS=postgresql+asyncpg://repitbot_analytics_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_analytics?sslmode=require

# Student Service Database
DATABASE_URL_STUDENT=postgresql+asyncpg://repitbot_student_service:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_students?sslmode=require

# API Gateway Database  
DATABASE_URL_GATEWAY=postgresql+asyncpg://repitbot_gateway:CHANGE_THIS_PASSWORD@your-postgres-host.com:5432/repitbot_gateway?sslmode=require

# Admin Database Connection (для миграций)
DATABASE_URL_ADMIN=postgresql+asyncpg://repitbot_admin:CHANGE_THIS_SUPER_STRONG_PASSWORD@your-postgres-host.com:5432/postgres?sslmode=require

# ============== SECURITY SECRETS ==============
# JWT Tokens (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
# Генерировать: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_256_BIT_KEY_GENERATED_WITH_OPENSSL
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_256_BIT_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Keys
API_SECRET_KEY=CHANGE_THIS_TO_RANDOM_API_SECRET_KEY

# Encryption keys для sensitive data
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_ENCRYPTION_KEY

# ============== EXTERNAL SERVICES ==============
# Telegram Bot
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_FROM_BOTFATHER
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET=GENERATE_RANDOM_WEBHOOK_SECRET

# ============== MESSAGE BROKER ==============
# RabbitMQ (замените на ваш реальный)
RABBITMQ_URL=amqp://repitbot_user:STRONG_RABBITMQ_PASSWORD@your-rabbitmq-host.com:5672/repitbot_vhost
RABBITMQ_HOST=your-rabbitmq-host.com
RABBITMQ_PORT=5672
RABBITMQ_USER=repitbot_user
RABBITMQ_PASSWORD=STRONG_RABBITMQ_PASSWORD
RABBITMQ_VHOST=repitbot_vhost

# ============== REDIS CACHE ==============
# Redis (замените на ваш реальный)
REDIS_URL=redis://repitbot_user:STRONG_REDIS_PASSWORD@your-redis-host.com:6379/0
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=STRONG_REDIS_PASSWORD
REDIS_DB=0

# ============== EMAIL SERVICE ==============
# SMTP для уведомлений
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@repitbot.com
SMTP_FROM_NAME=RepitBot

# ============== FILE STORAGE ==============
# Локальное хранилище
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,mp4,mp3

# AWS S3 (опционально, для production рекомендуется)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=repitbot-files
# AWS_S3_REGION=us-east-1

# ============== MONITORING ==============
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=STRONG_GRAFANA_PASSWORD

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============== SECURITY SETTINGS ==============
# CORS
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Session
SESSION_SECRET=GENERATE_RANDOM_SESSION_SECRET
SESSION_EXPIRE_HOURS=24

# ============== PAYMENT SETTINGS ==============
# Платежная система
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Валюта
CURRENCY=RUB
DEFAULT_LESSON_PRICE=1000.00

# ============== NOTIFICATION SETTINGS ==============
# Push notifications (Firebase)
FCM_SERVER_KEY=your-firebase-server-key
FCM_SENDER_ID=your-firebase-sender-id

# ============== SERVICE URLS ==============
# Internal service communication
API_GATEWAY_URL=http://api-gateway:8000
USER_SERVICE_URL=http://user-service:8001
LESSON_SERVICE_URL=http://lesson-service:8002
HOMEWORK_SERVICE_URL=http://homework-service:8003
PAYMENT_SERVICE_URL=http://payment-service:8004
MATERIAL_SERVICE_URL=http://material-service:8005
NOTIFICATION_SERVICE_URL=http://notification-service:8006
ANALYTICS_SERVICE_URL=http://analytics-service:8007
STUDENT_SERVICE_URL=http://student-service:8008

# External URLs (для webhook и API)
EXTERNAL_API_URL=https://api.your-domain.com
EXTERNAL_WEBHOOK_URL=https://your-domain.com/webhook

# ============== PERFORMANCE TUNING ==============
# Database connection pooling
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis connection pooling
REDIS_MAX_CONNECTIONS=50

# ============== BACKUP SETTINGS ==============
# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=repitbot-backups

# ============== FEATURE FLAGS ==============
# Feature toggles
ENABLE_GAMIFICATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
ENABLE_ACHIEVEMENTS=true

# ============== HEALTH CHECKS ==============
# Health check intervals
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# ============== SSL/TLS SETTINGS ==============
# SSL certificates
SSL_CERT_PATH=/etc/ssl/certs/repitbot.crt
SSL_KEY_PATH=/etc/ssl/private/repitbot.key

# Force HTTPS
FORCE_HTTPS=true
SECURE_COOKIES=true

# ============== TIMEZONE ==============
TZ=Europe/Moscow
LOCALE=ru_RU.UTF-8